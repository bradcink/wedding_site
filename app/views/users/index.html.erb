<body>
  <div id="wrapper">
  <%= render 'layouts/sidebar' %>
    <section class="section" id="section4" data-section="3">
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="span4">
            <h2>Users</h2>
            <h5>Download: <%= link_to "Excel", users_path(format: "xls"), {:style=>'color:#151515;'} %></h5>
          </div><!-- /span3 -->
        </div><!-- /row-fluid -->   
        <div class="span8">
          <table class="table table-condensed">
            <thead>
              <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Registered</th>
                <th>Role</th>
                <th></th>
                <th>#</th>
                <th></th>
                <th>RSVP</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td><%= user.created_at.to_date %></td>
              <td><%= user.roles.join(', ').titleize unless user.roles.first.nil? %></td>
              <td></td>
              <td><%= user.rsvp_count %></td>
              <td>
              <% if current_user.rsvp_confirmation == 1 %>
                              <td>Attending</td>
                            <% end %>
                            <% if current_user.rsvp_confirmation == 0 %>
                              <td>Not Attending</td>
                            <% end %>
                            <% if current_user.rsvp_confirmation == 2 %>
                              <td>Undecided</td>
                            <% end %>
                          </td>
              <td>
              <a data-toggle="modal" href="#role-options-<%= user.id %>" class="btn btn-mini btn-primary" type="button">Change role</a>
              <%= render user %>
              </td>
              <td><%= link_to("Delete user", user_path(user), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => 'btn btn-mini btn-danger') unless user == current_user %></td>
              </tr>
            <% end %>
              </tbody>
          </table>
        </div><!-- /span -->
      </div><!-- /container -->
    </section> 
  </div><!-- /wrapper -->
</body>
