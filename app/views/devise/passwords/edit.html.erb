<body>
  <div id="wrapper">
    <%= render 'layouts/sidebar' %>  
     <div id="container">        
        <section class="section" id="section1" data-section="1">
          <div class="container-fluid"> 
            <div class="row-fluid">
	            <div class="row-fluid title">
	              <div class="span3">
	                <h2 id="header-white">Change Your Password</h2>
	              </div><!-- /span3 -->
	            </div><!-- /row-fluid -->
	            <div class="row-fluid content">
	              <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put , :class => 'form-vertical' }) do |f| %>
				  <%= f.hidden_field :reset_password_token %>
				  <%= f.input :password, :required => true, :autofocus => true %>
				  <%= f.input :password_confirmation, :required => true %>
				  <%= f.button :submit, 'Change my password', :class => 'btn-inverse' %>
				<% end %>
				<div class="span20 hidden-phone">
					<img class="displayed" src="http://i.imgur.com/WeLqWSf.png" alt="Designed by Mark Lawrence | Mobile, Alabama">
				</div>
			</div>
		  </div>
		</section>
	</div>
</div>
</body>

