<body>
  <div id="wrapper">
    <%= render 'layouts/sidebar' %>
     <div id="container">        
        <section class="section" id="section1-index" data-section="1">
          <div class="container-fluid"> 
            <div class="row-fluid">
	            <div class="row-fluid title">
	              <div class="span3">
	                <h2 id="header-white">Forgot Your Password?</h2>
	              </div><!-- /span3 -->
	            </div><!-- /row-fluid -->
	            <div class="row-fluid content">
	              <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :post , :class => 'form-vertical' }) do |f| %>
				  <%= f.input :email, :required => true, :autofocus => true %>
				  <%= f.button :submit, 'Send reset password info', :class => 'btn-inverse' %>
				<% end %>
				<div class="span20 hidden-phone">
					<img class="displayed" src="http://i.imgur.com/kPSinyl.jpg" alt="Designed by Mark Lawrence | Mobile, Alabama">
				</div>
			</div>
		  </div>
		</section>
	</div>
</div>
</body>
